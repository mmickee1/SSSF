doctype html
head
  meta(charset='UTF-8')
  title Delete image
header
// Navigation
.container
  .top-bar
    ul.navbar
      li.nav-view
        a(href='./index.html') View
      li.nav-upload
        a(href='./upload.html') Add
.upload
  .glass
    h2  Delete a file 
    .fileupload
      form(action='delete' method='post' enctype='multipart/form-data')
        | Category: 
        input(type='text' name='category')
        br
        |                     Title: 
        input(type='text' name='title')
        br
        |                     Description: 
        input(type='text' name='description')
        br
        |                     Image: 
        input#imageUpload(type='file' name='image' accept='image/*')
        br
        button.btn(type='file' name='image') Choose File
        input(type='submit')
    .bottom-input
      a(href='./index.html')
      form(method='get' action='index.html')
        input(type='submit' value='Cancel')
